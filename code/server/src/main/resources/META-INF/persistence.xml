<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd ">

 <persistence-unit name="HederKosherSpringHibernate">
  <!--<provider>org.hibernate.ejb.HibernatePersistence</provider>-->
  <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
  <properties>
   <!--<property name="hibernate.hbm2ddl.auto" value="create"/>-->
   <property name="hibernate.hbm2ddl.auto" value="update"/>

   <property name="hibernate.connection.url"  value="jdbc:mysql://localhost:3306/heder-kosher"/>
   <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
   <property name="hibernate.connection.username" value="hk_user"/>
   <property name="hibernate.connection.password" value="hk_user"/>
  </properties>
 </persistence-unit>

</persistence>
