<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coach"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tr2016.hederkosher.CoachActivity">

    <!--<ImageView-->
    <!--android:id="@+id/trainerImageView"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginBottom="12dp"-->
    <!--android:adjustViewBounds="true"-->
    <!--android:background="@drawable/img"-->
    <!--android:minHeight="200dp" />-->

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/trainerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="200dp"
        android:src="@drawable/img"
        app:civ_border_color="#00000000"
        app:civ_border_width="0dp" />

    <RatingBar
        android:id="@+id/trainerRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainerImageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/trainerFirstnameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/trainerRatingBar"
        android:text="Firstname" />

    <TextView
        android:id="@+id/trainerLastnameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainerRatingBar"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/trainerFirstnameTextView"
        android:text="Lastname" />

    <TextView
        android:id="@+id/trainerInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trainerLastnameTextView"
        android:text="This is the man who built Microsoft. Hoorrray!" />

    <TextView
        android:id="@+id/trainerExperienceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trainerInfoTextView"
        android:text="Lots of experience in programming and business" />

    <TextView
        android:id="@+id/trainerMotoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trainerExperienceTextView"
        android:text="640KB should be enough for everyone! (actually he didn't say that..)" />

    <TextView
        android:id="@+id/trainerProfileTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trainerMotoTextView"
        android:text="Profile (URL here?)" />

</RelativeLayout>
